@{ 
    ViewBag.role = Session["role"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JavaFlorist</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mr+De+Haviland&display=swap" rel="stylesheet">
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <nav>

        <img class="nav-logo" alt="logo" src="~/Resources/logo_white.png" />

        <div class="items">
            @Html.ActionLink("Home", "Index", "Home")
            @Html.ActionLink("Shop", "Shop", "Home")

            @if (User.Identity.IsAuthenticated)
            {
                if(ViewBag.role == "Customer")
                {
                    @Html.ActionLink("My Orders", "OrderList", "Home")
                }else if(ViewBag.role == "Admin")
                {
                    @Html.ActionLink("Flowers", "Flowers", "Admin")
                }
                @Html.ActionLink("Signout", "Signout", "Account")
            }
            else
            {
                @Html.ActionLink("Login", "Login", "Account")
            }
            

            @if(ViewBag.role != "Admin")
            {
                <a href="~/Home/Cart"><ion-icon name="cart"></ion-icon></a>
            }
        </div>

        <div class="ham">
            <div class="ham1"></div>
            <div class="ham2"></div>
            <div class="ham3"></div>
        </div>

    </nav>

    <div class="body-content">
        @RenderBody()
        <footer>
            <div class="footer-sect">
                <div class="first-sect">
                    <img alt="logo" src="~/Resources/logo_white.png" />
                    <p>Proin gravida nibh vel velit auctor aliquet. Aenean sollicitu din, lorem quistix bibendum auctoris</p>
                </div>
                <div class="sec-sect">
                    <p class="work-heading">WORKING HOURS</p>
                    <p class="work-item">Monday: 9AM - 9PM</p>
                    <p class="work-item">Tuesday: 9AM - 9PM</p>
                    <p class="work-item">Wednesday: 9AM - 9PM</p>
                    <p class="work-item">Thursday: 9AM - 9PM</p>
                    <p class="work-item">Friday: 9AM - 9PM</p>
                    <p class="work-item">Saturday: 9AM - 9PM</p>
                    <p class="work-item">Closed: 9AM - 9PM</p>
                </div>
            </div>
            <p class="footer-footer">&copy; 2014 - @DateTime.Now.Year - JavaFlorist</p>
        </footer>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        const ham = document.querySelector(".ham");
        const nav = document.querySelector(".items");
        let turn = false;

        ham.addEventListener("click", () => {
            ham.classList.toggle("active");
            if (turn) {
                nav.style.left = "-100%";
            } else {
                nav.style.left = "0";
            }
            turn = !turn;
        })

        const logo = document.querySelector(".nav-logo");

        logo.addEventListener("click", () => {
            location.href = "/"
        })

    </script>
</body>
</html>