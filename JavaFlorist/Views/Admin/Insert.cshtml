@model JavaFlorist.Models.BOUQUET
@{
    ViewBag.Title = "Insert";
}

<div class="cart-sect">

    <div class="cart-upper-sect">
        <p>Insert</p>
    </div>

    <div class="order-main-sect">

        @using (Html.BeginForm("Insert", "Admin", FormMethod.Post, new {enctype="Multipart/form-data"}))
        {
            <div class="form-group">
                <label class="form-label">Enter Name:</label>
                @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
                @Html.ValidationMessageFor(x=>x.NAME, "", new {@class="text-danger"})
            </div>
            <div class="form-group">
                <label class="form-label">Enter Price:</label>
                @Html.TextBoxFor(x => x.PRICE, new { @type = "number", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PRICE, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="form-label">Enter Description:</label>
                @Html.TextAreaFor(x => x.DESCRIPTION, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.DESCRIPTION, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="form-label">Select Image:</label>
                <input class="form-control" type="file" name="iqg" accept="png" />
                @Html.ValidationMessageFor(x => x.iqg, "", new { @class = "text-danger" })
                <p class="hint">*only accepts .png files</p>
            </div>

            <input type="submit" value="Insert" class="btn btn-dark" />

         }

    </div>

</div>