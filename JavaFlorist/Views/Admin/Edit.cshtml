@model JavaFlorist.Models.BOUQUET
@{
    ViewBag.Title = "Edit";
}

<div class="cart-sect">

    <div class="cart-upper-sect">
        <p>Edit</p>
    </div>

    <div class="order-main-sect">
        <img src="@Model.IMG.Substring(2)" width="200" height="200" />
        @using (Html.BeginForm("Update", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                <label class="form-label">Bouquet Name:</label>
                @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-label">Bouquet Price:</label>
                @Html.TextBoxFor(x => x.PRICE, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-label">Bouquet Description:</label>
                @Html.TextAreaFor(x => x.DESCRIPTION, new { @class = "form-control" })
            </div>
            <input type="hidden" name="BOUQUETID" value="@Model.BOUQUETID" />
            <input type="submit" value="Update" class="btn btn-dark" style="margin-top:1em" />
        }
    </div>

</div>
